{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "sourceMap": true,
    "types": ["jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "./__tests__/**/*"
  ]
}